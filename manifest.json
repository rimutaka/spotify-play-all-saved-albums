{
  "manifest_version": 2,
  "name": "Spotify: Play All Saved Albums",
  "description": "Creates a single playlist with all songs from all saved albums.",
  "homepage_url": "https://github.com/rimutaka/",
  "version": "0.1",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2x.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://open.spotify.com/*"
      ],
      "js": [
        "./main.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://*.spotify.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }
}